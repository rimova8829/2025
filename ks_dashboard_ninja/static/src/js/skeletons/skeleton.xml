<?xml version="1.0" encoding="utf-8"?>
<templates xml:space="preserve">
    <t t-name="card_skeleton">
        <div class="skeleton-card skeleton-loading">
            <div class="card-img"/>
            <div class="card-title"/>
            <div class="card-text"/>
        </div>
    </t>

    <t t-name="graph_skeleton">
        <div class="content skeleton-loading position-absolute h-100 w-100">
            <div class="chart-loading"/>
            <div class="d-flex align-items-center gap-2 legend-box">
                <div t-foreach="[1,2,3]" t-key="count" t-as="count" class="d-flex h-100 w-100 gap-1 align-items-center">
                    <div class="square-line"/>
                    <div class="overview-line"/>
                </div>
            </div>
        </div>
    </t>

    <t t-name="ai_explanation_skeleton">
        <div class="explain-content skeleton-loading">
            <div class="explain-card"/>
            <div class="text w-100"/>
            <div class="text w-75"/>
            <div class="text w-50"/>
            <div class="text w-25"/>
            <div class="text"/>
        </div>
    </t>
</templates>